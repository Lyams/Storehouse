<h1><%= t 'thing.list'%></h1>

<table>
  <thead>
  <tr>
    <th><%=t 'comodity.title' %></th>
    <th><%=t 'thing.count' %></th>
    <th><%= 'thing.last_delivery_date' %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @things.each do |thing| %>
    <tr>
      <td><%= thing.commodity.name %></td>
      <td><%= thing.value %></td>
      <td> Здесь должна быть дата последней доставки</td>
      <td><%= link_to (t 'storehouse.show'), @storehouse %></td>
      <td><%= link_to (t 'storehouse.del'), @storehouse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>