<h1><%= t 'thing.list' %></h1>

<table>
  <thead>
  <tr>
    <th><%= t 'commodity.name' %></th>
    <th><%= t 'thing.count' %></th>
    <th><%= t 'thing.last_delivery_date' %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @things.each do |thing| %>
    <tr>
      <td><%= thing.commodity.name %></td>
      <td><%= thing.value %></td>
      <td><%= date_of_last_delivery(@storehouse, thing) || (t 'delivery.none') %></td>
    </tr>
  <% end %>
  </tbody>
</table>